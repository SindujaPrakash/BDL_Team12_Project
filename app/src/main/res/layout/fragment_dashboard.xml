<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_rectangle">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="your body"
        android:textColor="#ffffff"
        android:textSize="50px" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="in real time"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="chill, you're fine"
        android:textColor="#ffffff"
        android:textSize="30px" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="93dp"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:fontFamily="@font/typo_round_bold_demo"
            android:text="heart beat"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:fontFamily="@font/typo_round_bold_demo"
            android:text="breathanalyzer"
            android:textColor="#ffffff"
            android:textSize="30px" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="-77dp"
        android:layout_toStartOf="@+id/videoView"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="150 bpm"
        android:textColor="#ffffff"
        android:textSize="30px"
        android:layout_toLeftOf="@+id/videoView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="-77dp"
        android:layout_toEndOf="@+id/videoView"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="normal"
        android:textColor="#ffffff"
        android:textSize="30px"
        android:layout_toRightOf="@+id/videoView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
		android:layout_marginBottom="139dp"
        app:srcCompat="@drawable/heartgif" />
		
    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/typo_round_bold_demo"
            android:text="heart beat"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"

            android:fontFamily="@font/typo_round_bold_demo"
            android:text="breatheanalyzer"
            android:textColor="#ffffff"
            android:textSize="30px" />

    </LinearLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="149dp"
        android:layout_height="164dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="139dp" />

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/typo_round_bold_demo"
            android:text="150ppm"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:fontFamily="@font/typo_round_bold_demo"
            android:text="normal"
            android:textColor="#ffffff"
            android:textSize="30px" />
    </LinearLayout>

</RelativeLayout>
