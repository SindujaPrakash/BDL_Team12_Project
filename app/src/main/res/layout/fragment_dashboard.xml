<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_rectangle">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="your body"
        android:textColor="#ffffff"
        android:textSize="70px"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="in real time"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="121dp"
        android:fontFamily="@font/typo_round_bold_demo"
        android:text="chill, you're fine"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50px" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="357dp"
        android:layout_height="364dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/heartgif" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="12dp"
        android:text="Heartbeat"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginEnd="17dp"
        android:text="Breathanalyzer"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="58dp"
        android:text="150 ppm"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/textView13"
        android:text="normal"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:textAlignment="center"/>

</RelativeLayout>
